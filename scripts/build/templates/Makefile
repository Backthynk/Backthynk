.PHONY: help run

# Default target
help:
	@printf "\033[1m\033[0;36mBackthynk Built Application\033[0m\n"
	@printf "\033[0;36m===========================\033[0m\n"
	@printf "\n"
	@printf "\033[1mAvailable targets:\033[0m\n"
	@printf "\n"
	@printf "  \033[0;32mrun\033[0m       Run the application (Unix only)\n"
	@printf "\n"
	@printf "\033[1mWindows users:\033[0m\n"
	@printf "  Use \033[0;33mrun.bat\033[0m to run the application\n"
	@printf "\n"

# Run the application
run:
	@APP_ENV=production ./bin/unix/backthynk-latest
