.PHONY: help run

# Default target
help:
	@printf "\033[1m\033[0;36mBackthynk v__VERSION__ - __PLATFORM__\033[0m\n"
	@printf "\033[0;36m===========================\033[0m\n"
	@printf "\n"
	@printf "\033[1mAvailable targets:\033[0m\n"
	@printf "\n"
	@printf "  \033[0;32mrun\033[0m       Run the application\n"
	@printf "\n"
	@printf "\033[1mManual start:\033[0m\n"
	@printf "  ./bin/backthynk-latest\n"
	@printf "\n"

# Run the application
run:
	@APP_ENV=production ./bin/backthynk-latest
