{
  "css_extraction": {
    "tailwind": {
      "cdn_url": "https://cdn.tailwindcss.com/3.4.17",
      "full_css_url": "https://unpkg.com/tailwindcss@2.0.1/dist/tailwind.min.css",
      "output_file": "web/static/css/tailwind-minimal.css",
      "cache_file": "scripts/extract-css/tailwind-full.css"
    },
    "fontawesome": {
      "cdn_url": "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css",
      "font_url": "https://use.fontawesome.com/releases/v6.0.0/webfonts/fa-solid-900.woff2",
      "output_file": "web/static/css/fontawesome-minimal.css",
      "font_output": "web/static/fonts/fa-solid-900.woff2"
    },
    "purgecss": {
      "temp_content_file": "scripts/extract-css/temp_content.html"
    },
    "scan_patterns": [
      "web/**/*.html",
      "web/**/*.js"
    ],
    "exclude_patterns": [
      "**/compressed/**",
      "**/node_modules/**"
    ],
    "cache_file": "scripts/extract-css/css-extraction-cache.json",
    "extract_css_dir": "scripts/extract-css"
  },
  "build": {
    "compressed_dirs": [
      "web/static/js/compressed",
      "web/static/css/compressed",
      "web/templates/compressed"
    ],
    "js_files": {
      "priority_order": [
        "constants.js",
        "router.js",
        "state.js",
        "utils.js",
        "alertSystem.js",
        "api.js"
      ],
      "last_files": [
        "main.js"
      ],
      "bundle_output": "web/static/js/compressed/bundle.js"
    },
    "minification": {
      "terser_available": true,
      "esbuild_available": true,
      "fallback_api": "https://www.toptal.com/developers/javascript-minifier/api/raw"
    }
  },
  "development": {
    "bulk_posts": {
      "default_months_back": 36,
      "max_posts_per_batch": 1000
    }
  },
  "paths": {
    "web_root": "web",
    "static_root": "web/static",
    "templates_root": "web/templates",
    "scripts_root": "scripts",
    "css_dir": "web/static/css",
    "js_dir": "web/static/js",
    "fonts_dir": "web/static/fonts"
  },
  "urls": {
    "cdn": {
      "marked": "https://cdn.jsdelivr.net/npm/marked@12.0.0/marked.min.js",
      "dompurify": "https://cdn.jsdelivr.net/npm/dompurify@3.0.8/dist/purify.min.js"
    }
  },
  "colors": {
    "red": "\u001b[0;31m",
    "green": "\u001b[0;32m",
    "blue": "\u001b[0;34m",
    "yellow": "\u001b[0;33m",
    "cyan": "\u001b[0;36m",
    "purple": "\u001b[0;35m",
    "gray": "\u001b[0;90m",
    "bold": "\u001b[1m",
    "nc": "\u001b[0m"
  },
  "app": {
    "binary_name": "backthynk",
    "production_env": "BACKTHYNK_ENV=production",
    "build_command": "go build -o {binary_name} ./cmd/server/",
    "clean_files": [
      "backthynk",
      "scripts/extract-css-tool"
    ],
    "clean_dirs": [
      "web/static/js/compressed",
      "web/static/css/compressed",
      "web/templates/compressed"
    ],
    "clean_individual_files": [
      "web/static/css/tailwind-minimal.css",
      "web/static/css/fontawesome-minimal.css",
      "scripts/purgecss",
      "scripts/tailwind-full.css",
      "scripts/css-extraction-cache.json",
      "scripts/temp_content.html"
    ]
  },
  "makefile": {
    "go_test_command": "go test ./... -short",
    "go_test_verbose_command": "go test ./... -v -short"
  },
  "version": "1.0.0",
  "updated": "2025-01-30"
}