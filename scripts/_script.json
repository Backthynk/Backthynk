{
  "build": {
    "compressed_dirs": [
      "web/static/js/compressed",
      "web/static/css/compressed",
      "web/templates/compressed"
    ],
    "js_files": {
      "priority_order": [
        "constants.js",
        "router.js",
        "state.js",
        "utils.js",
        "alertSystem.js",
        "api.js"
      ],
      "last_files": [
        "main.js"
      ],
      "bundle_output": "web/static/js/compressed/bundle.js"
    },
    "css_files": {
      "bundle_output": "web/static/css/compressed/bundle.css"
    },
    "assets": {
      "js_compressed_check_dir": "web/static/js/compressed",
      "templates_compressed_check_dir": "web/templates/compressed",
      "js_bundle_path": "/static/js/compressed/bundle.js",
      "css_bundle_path": "/static/css/compressed/bundle.css"
    },
    "minification": {
      "fallback_api": "https://www.toptal.com/developers/javascript-minifier/api/raw"
    },
    "html_processing": {
      "js_script_tags_start": "constants.js",
      "js_script_tags_end": "main.js",
      "tailwind_cdn_pattern": "https://cdn.tailwindcss.com",
      "fontawesome_cdn_pattern": "https://cdnjs.cloudflare.com/ajax/libs/font-awesome"
    }
  },
  "development": {
    "bulk_posts": {
      "default_months_back": 36,
      "max_posts_per_batch": 1000
    }
  },
  "paths": {
    "static_root": "web/static",
    "templates_root": "web/templates",
    "css_dir": "web/static/css",
    "js_dir": "web/static/js",
    "cache_dir": "scripts/.cache"
  },
  "urls": {
    "cdn": {
      "marked": "https://cdn.jsdelivr.net/npm/marked@12.0.0/marked.min.js",
      "dompurify": "https://cdn.jsdelivr.net/npm/dompurify@3.0.8/dist/purify.min.js"
    }
  },
  "colors": {
    "red": "\u001b[0;31m",
    "green": "\u001b[0;32m",
    "blue": "\u001b[0;34m",
    "yellow": "\u001b[0;33m",
    "cyan": "\u001b[0;36m",
    "purple": "\u001b[0;35m",
    "gray": "\u001b[0;90m",
    "bold": "\u001b[1m",
    "nc": "\u001b[0m"
  },
  "app": {
    "binary_name": "backthynk",
    "production_env": "BACKTHYNK_ENV=production",
    "build_command": "go build -o {binary_name} ./cmd/server/",
    "clean_files": [
      "backthynk"
    ],
    "clean_dirs": [
      "web/static/js/compressed",
      "web/static/css/compressed",
      "web/templates/compressed"
    ],
    "fclean_dirs": [
      "scripts/.cache",
      "scripts/build-prod/tailwind-build/node_modules",
      "scripts/build-prod/tailwind-build/package-lock.json",
      "scripts/build-prod/fontawesome-build/node_modules",
      "scripts/build-prod/fontawesome-build/package-lock.json"
    ],
    "clean_individual_files": []
  },
  "makefile": {
    "go_test_command": "go test ./... -short",
    "go_test_verbose_command": "go test ./... -v -short"
  },
  "version": "1.0.0",
  "updated": "2025-10-01"
}