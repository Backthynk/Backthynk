{
  "core": {
    "maxContentLength": 1500
  },
  "metadata": {
    "title": "Backthynk",
    "description": "Self-hosted micro-blogging platform for people with messy thoughts."
  },
  "features": {
    "activity": {
      "enabled": true,
      "periodMonths": 4
    },
    "detailedStats": {
      "enabled": true
    },
    "retroactivePosting": {
      "enabled": false,
      "timeFormat": "24h"
    },
    "markdown": {
      "enabled": false
    },
    "fileUpload": {
      "enabled": true,
      "maxFileSizeMB": 100,
      "maxFilesPerPost": 25,
      "allowedExtensions": [
        "jpg",
        "jpeg",
        "png",
        "gif",
        "webp",
        "pdf",
        "doc",
        "docx",
        "xls",
        "xlsx",
        "txt",
        "zip",
        "mp4",
        "mov",
        "avi",
        "rar",
        "7z",
        "mp3",
        "wav",
        "ogg",
        "flac",
        "m4a",
        "json",
        "csv",
        "yaml",
        "yml",
        "md",
        "xml",
        "ppt",
        "pptx",
        "odt",
        "ods",
        "odp"
      ]
    }
  }
}