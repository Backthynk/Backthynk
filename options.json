{
  "core": {
    "maxContentLength": 10000
  },
  "metadata": {
    "title": "Backthynk",
    "description": "Personal micro blog platform"
  },
  "features": {
    "activity": {
      "enabled": true,
      "periodMonths": 4
    },
    "detailedStats": {
      "enabled": true
    },
    "retroactivePosting": {
      "enabled": true,
      "timeFormat": "24h"
    },
    "markdown": {
      "enabled": false
    },
    "fileUpload": {
      "enabled": true,
      "maxFileSizeMB": 5,
      "maxFilesPerPost": 25,
      "allowedExtensions": [
        "jpg",
        "jpeg",
        "png",
        "gif",
        "webp",
        "pdf",
        "doc",
        "docx",
        "xls",
        "xlsx",
        "txt",
        "zip",
        "mp4",
        "mov",
        "avi"
      ]
    }
  }
}